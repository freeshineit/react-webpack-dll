{
    "presets": [
        "es2015",
        "env",
        "react"
    ],
    "plugins": [
        "react-hot-loader/babel",
        // https://www.npmjs.com/package/babel-plugin-root-import
        ["babel-plugin-root-import",
            {
                "rootPathPrefix": "~",
                "rootPathSuffix": "src"
            }
        ],
        [
            "import",
            {
                "libraryName": "antd",
                "libraryDirectory": "es",
                "style": true
            }
        ]
    ]
}